@model UserLogin
@{
    Layout = null;
}
<html>
    <head>
    <link href="~/css/style.css" rel="stylesheet" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    
    </head>
<body class="img js-fullheight" style="background: url(../images/bg-03.png);">
    <section class="ftco-section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6 text-center mb-5">
                    <img src="~/images/syrmasgs-re.png" style="width:50%; height:100%;" />
                </div>
                
            </div>
            <div class="row justify-content-center">
                <div class="col-md-6 col-lg-4">
                    <div class="login-wrap p-0">
                        <h3 class="mb-4 text-center">Login Page</h3>
                        <form class="signin-form" action="Login" method="post">
                            <div class="form-group">
                                @* <input type="text" class="form-control" id="txtUserName" asp-for="Userid" placeholder="User Name" required /> *@
                            </div>
                            <div class="form-group">
                                @* <input type="password" class="form-control" id="txtPassword" asp-for="Userpassword" placeholder="Password" required /> *@
                                <span toggle="#password-field" class="fa fa-fw fa-eye field-icon toggle-password"></span>
                            </div>
                            <div class="form-group">
                                <button type="submit" class="form-control btn btn-primary submit px-3">Sign-In</button>
                            </div>
                            <div class="form-group d-md-flex">
                                <div class="w-50">
                                    <label class="checkbox-wrap checkbox-primary"> Remember Me <input type="checkbox" checked />
                                        <span class="checkmark"></span>
                                        </label>
                                </div>
                            
                            <div class="w-50 text-md-right">
                                <a href="#" style="color:#FFFFFF">Forget Password</a>
                            </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
    </body>
</html>
